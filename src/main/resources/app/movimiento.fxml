<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="app.controllers.MovimientoController">
    <center>
        <VBox spacing="15">
            <HBox prefWidth="1200.0" alignment="CENTER" spacing="20.0">
                <Button fx:id="Ingreso" onAction="#handleFormIngresoOGasto" text="Ingreso" prefWidth="100" />
                <Button fx:id="Gasto" onAction="#handleFormIngresoOGasto" text="Gasto" prefWidth="100" />
            </HBox>
            <VBox fx:id="seccionTitulo" alignment="CENTER"/>
            <VBox fx:id="formContainer"/>
            <HBox prefWidth="1200.0" alignment="CENTER" spacing="20.0">
                <Button text="Crear" onAction="#handleGuardar" styleClass="btn-crear"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
