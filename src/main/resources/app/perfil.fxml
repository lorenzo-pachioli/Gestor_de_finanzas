<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="app.controllers.PerfilController" >
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
            <Label text="Perfil" styleClass="titulo-h1"/>

            <HBox styleClass="perfil-box">
                <Label text="Nombre: " styleClass="titulo-h2"/>
                <HBox>
                    <VBox fx:id="seccionNombre" />
                    <Button fx:id="nombre" onAction="#handleEditarAtributo">
                        <graphic>
                            <FontIcon iconLiteral="antf-edit"/>
                        </graphic>
                    </Button>
                </HBox>
            </HBox>

            <HBox styleClass="perfil-box">
                <Label text="Apellido: " styleClass="titulo-h2"/>
                <HBox>
                    <VBox fx:id="seccionApellido" />
                    <Button fx:id="apellido" onAction="#handleEditarAtributo">
                        <graphic>
                            <FontIcon iconLiteral="antf-edit"/>
                        </graphic>
                    </Button>
                </HBox>
            </HBox>


            <HBox styleClass="perfil-box">
                <Label text="DNI: " styleClass="titulo-h2"/>
                <HBox>
                    <VBox fx:id="seccionDni" />
                    <Button fx:id="dni" onAction="#handleEditarAtributo">
                        <graphic>
                            <FontIcon iconLiteral="antf-edit"/>
                        </graphic>
                    </Button>
                </HBox>
            </HBox>

            <HBox styleClass="perfil-box">
                <Label text="Email: " styleClass="titulo-h2"/>
                <HBox>
                    <VBox fx:id="seccionEmail" />
                    <Button fx:id="email" onAction="#handleEditarAtributo">
                        <graphic>
                            <FontIcon iconLiteral="antf-edit"/>
                        </graphic>
                    </Button>
                </HBox>
            </HBox>

            <HBox styleClass="perfil-box">
                <Label text="Telefono: " styleClass="titulo-h2"/>
                <HBox>
                    <VBox fx:id="seccionTelefono" />
                    <Button fx:id="telefono" onAction="#handleEditarAtributo">
                        <graphic>
                            <FontIcon iconLiteral="antf-edit"/>
                        </graphic>
                    </Button>
                </HBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
